@model BookViewModel
@{
  ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>
<h3>Authors:</h3>
<ul>
  @foreach (var auth in Model.Authors)
  {
    <li>@auth.Name</li>
  }
</ul>
<h3>Subgenres:</h3>
<ul>
  @foreach (var subg in Model.Subgenres)
  {
  <li><a asp-area="" asp-controller="Subgenres" asp-action="Subgenre" asp-route-id="@subg.SubgenreId"/>@subg.Name</li>
  }
</ul>

