@model HomeViewModel
@{
  ViewData["Title"] = "Home Page";
}
  <div class="row">
    <div class="col-lg-6">
      <div class="card">
        <h1> Discover a book</h1>
        <img class="card-img-top" src="@("/images/" + Model.Book.Image)" alt="@Model.Book.Name" style="width: 70%;">
        <div class="container2">
          <h3 class="card-title"><a asp-area="" asp-controller="Books" asp-action="Book" asp-route-id="@Model.Book.BookId">@Model.Book.Name</a></h3>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card">
        <h1> Discover an author</h1>
      <img class="card-img-top" src="@("/images/" + Model.Author.Image)" alt="@Model.Author.Name" style="width: 70%;">
      <div class="container2">
        <h3 class="card-title"><a asp-area="" asp-controller="Authors" asp-action="Author" asp-route-id="@Model.Author.AuthorId">@Model.Author.Name</a></h3>
      </div>
      </div>
      
  </div>
</div>