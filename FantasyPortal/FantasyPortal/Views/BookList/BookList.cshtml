@model IEnumerable<UserBookViewModel>
@{
    ViewData["Title"] = "BookList";
}

<h2>My Book List</h2>

<ol>
  @foreach(var userbook in Model)
  {
  <li>
    @userbook.Book.Name
    @userbook.Progress
    <a class="active" asp-area="" asp-controller="BookList" asp-action="BookListItemEdit" asp-route-userId="@userbook.UserId" asp-route-bookId="@userbook.Book.BookId">Edit</a>
    <a class="active" asp-area="" asp-controller="BookList" asp-action="RemoveBook" asp-route-userId="@userbook.UserId" asp-route-bookId="@userbook.Book.BookId">Remove</a>
  </li>
  }
</ol>

